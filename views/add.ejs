<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Aad Donor</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("includes/newdonor.ejs") %>

    <h1 id="h1">Add donor</h1>
    <h5 id="h5">add.ejs <%=data._id%></h5>

    <div class="addform">
      <form method="post" action="/trust/<%=data._id%>/addpay" class="form">
        <div class="d0">
          <label for="userName">userName : </label>
          <input
            name="userName"
            value="<%=data.userName%>"
            type="text"
            class="inputaddtop"
            readonly
          />
        </div>
        <div class="d0">
          <label for="name">Name :</label>
          <input
            name="name"
            type="text"
            class="inputaddtop"
            value="<%=data.name%>"
            readonly
          />
        </div>
        <div class="d0">
          <label for="email">email : </label>
          <input
            name="email"
            type="text"
            class="inputaddtop"
            value="<%=data.email%>"
            readonly
          />
        </div>

        <div class="d1">
          <label for="payment">payment : </label
          ><input name="payment" type="number" class="inputadd" />
          <label for="date">date : </label
          ><input
            name="date"
            type="date"
            class="inputadd"
            required
            pattern="\d{2}-\d{2}-\d{4}"
          />

          <button class="=btn" type="submit">Add</button>
        </div>
      </form>
      <div id="bott">
           
        <form method="post" action="/trust/user/<%=data._id%>/profile/">
          <button class="btn">serchProfile</button>
        </form>
        <form method="post" action="/trust/user/<%=data.userName%>/contribution">
          <button class="btn">MyContribution</button>
        </form>
        <form method="post" action="/trust/userportal/<%=data._id%>/">
          <button class="btn">Homepage</button>
        </form>
      </div>
    </div>

    <script src="/app.js"></script>
  </body>
</html>
